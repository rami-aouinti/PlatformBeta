<aside class="main-sidebar sidebar-dark-primary elevation-4" style="overflow: scroll; top: 10px; height: 100%; padding-top: 20px; bottom: 0;">
    <div class="sidebar">
        <center><h2 class="text-warning"> Chat </h2></center>
        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        {% for usersConversation in usersConversations.getUsers %}
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ asset('uploads/avatar/' ~ usersConversation.profile.image) }}" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">{{ usersConversation.username }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
</aside>
