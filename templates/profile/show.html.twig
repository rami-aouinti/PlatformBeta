{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ profile.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ profile.lastname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ profile.birthday ? profile.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ profile.nationality }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ profile.email }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ profile.image }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ profile.telefone }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ profile.country }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ profile.state }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ profile.postcode }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ profile.street }}</td>
            </tr>
            <tr>
                <th>Homenumber</th>
                <td>{{ profile.homenumber }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ profile.start ? profile.start|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ profile.end ? profile.end|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ profile.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_index') }}">back to list</a>

    <a href="{{ path('profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}
