{{ form_start(form, {'attr': {'id': 'password-reset-new-form'}}) }}
    <div class="field">
        {{ form_label(form.plainPassword.first, 'reset_password.form.new_password'|trans, {'label_attr': {'class': 'label has-text-left'}}) }}
        <div class="control has-icons-left">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'input', 'placeholder': 'reset_password.form.new_password_placeholder'|trans}}) }}
            <span class="icon is-small is-left">
                <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
        </div>
    </div>

    <div class="field">
        {{ form_label(form.plainPassword.second, 'reset_password.form.repeat_password'|trans, {'label_attr': {'class': 'label has-text-left'}}) }}
        <div class="control has-icons-left">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'input', 'placeholder': 'reset_password.form.repeat_password_placeholder'|trans}}) }}
            <span class="icon is-small is-left">
                <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
        </div>
        <div class="help is-danger has-text-left">
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>

    <button type="submit" class="button is-large is-primary is-fullwidth" data-trans="{{ 'reset_password.form.submitted'|trans }}">
        {{ 'reset_password.form.submit'|trans }}
    </button>
{{ form_end(form) }}
