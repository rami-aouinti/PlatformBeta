{% extends 'base.html.twig' %}

{% block title %}Regel index{% endblock %}

{% block body %}
    {% include 'layout/header.html.twig' with
        {
            'data': regels,
            'page': 'Regel',
            'path': 'home',
            'filter': true,
            'buttonNew': false,
        }
    %}

<!-- Main content -->
<section class="content">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-text-width"></i>
                        Description Horizontal
                    </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                        {% for regel in regels %}
                            <div class="callout callout-danger">
                                <h5>{{ regel.title }}</h5>

                                <p>{{ regel.description }}</p>
                            </div>
                        {% else %}
                            no records found
                        {% endfor %}
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
</section>
{% endblock %}
