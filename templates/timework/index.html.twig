{% extends 'base.html.twig' %}

{% block title %}Timework index{% endblock %}

{% block body %}
    <h1>Timework index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timework in timeworks %}
            <tr>
                <td>{{ timework.id }}</td>
                <td>{{ timework.content }}</td>
                <td>{{ timework.start ? timework.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ timework.end ? timework.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('timework_show', {'id': timework.id}) }}">show</a>
                    <a href="{{ path('timework_edit', {'id': timework.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timework_new') }}">Create new</a>
{% endblock %}
